<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_contain1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/android1"/>

        <ImageView
            android:id="@+id/iv_contain2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/android3"/>

        <ImageView
            android:id="@+id/iv_contain3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/android1"/>
    </LinearLayout>

    <com.github.full_screen_image_view_demo.ViewImagePicker
        android:id="@+id/vew_image_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>